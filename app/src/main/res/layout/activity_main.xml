<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff8c00"
    android:padding="0dp">




        <TextView
            android:layout_width="fill_parent"
            android:layout_height="207dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/textView"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:gravity="bottom|right"
            android:textSize="70sp"
            android:nestedScrollingEnabled="false"
            android:maxLines="2"
            android:maxLength="17" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:background="#4d4d4d"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"
        android:text="7"
        android:textColor="#ffffff"
        android:textSize="30sp" />


    <Button
        android:id="@+id/btn8"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:background="#4d4d4d"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"
        android:text="8"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:background="#4d4d4d"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"
        android:text="9"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_toStartOf="@+id/btn5"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="4"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn8"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="5"
        android:textColor="#ffffff"
        android:textSize="30sp" />


    <Button
        android:id="@+id/btn6"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="6"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn4"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_toStartOf="@+id/btn5"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="2"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="3"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/btn1"
        android:background="#4d4d4d"
        android:onClick="onClickClear"
        android:text="C"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:background="#4d4d4d"
        android:onClick="onClickEqual"
        android:text="="
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:background="#4d4d4d"
        android:maxWidth="90dp"
        android:onClick="onClickOperator"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnPlus"
        android:layout_toRightOf="@+id/btn9"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnMinus"
        android:layout_toRightOf="@+id/btn9"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:text="x"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnMult"
        android:layout_toRightOf="@+id/btn9"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:text="รท"
        android:textColor="#ffffff"
        android:textSize="30sp" />



    </RelativeLayout>

